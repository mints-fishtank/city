{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
            }
        },
        {
            "name": "debug",
            "displayName": "All Debug",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_CLIENT": "ON",
                "BUILD_SERVER": "ON",
                "BUILD_TESTING": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "All Release",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_CLIENT": "ON",
                "BUILD_SERVER": "ON",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "client-debug",
            "displayName": "Client Debug",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_CLIENT": "ON",
                "BUILD_SERVER": "OFF",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "client-release",
            "displayName": "Client Release",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_CLIENT": "ON",
                "BUILD_SERVER": "OFF",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "server-debug",
            "displayName": "Server Debug",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_CLIENT": "OFF",
                "BUILD_SERVER": "ON",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "server-release",
            "displayName": "Server Release",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_CLIENT": "OFF",
                "BUILD_SERVER": "ON",
                "BUILD_TESTING": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "All Debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "All Release",
            "configurePreset": "release"
        },
        {
            "name": "client-debug",
            "displayName": "Client Debug",
            "configurePreset": "client-debug"
        },
        {
            "name": "client-release",
            "displayName": "Client Release",
            "configurePreset": "client-release"
        },
        {
            "name": "server-debug",
            "displayName": "Server Debug",
            "configurePreset": "server-debug"
        },
        {
            "name": "server-release",
            "displayName": "Server Release",
            "configurePreset": "server-release"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
